<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ExName_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:text="@string/card_info"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="22sp" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/exercise_image_slider"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:animateLayoutChanges="true"
            android:padding="5dp"
            android:visibility="visible"
            app:iss_auto_cycle="false"
            app:iss_corner_radius="16">

            <ImageView
                android:id="@+id/placeHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/logoapplicazione_modified_psd" />
        </com.denzcoskun.imageslider.ImageSlider>

        <TextView
            android:id="@+id/exDescription_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/card_info"
            android:textAlignment="center"
            android:textColor="@color/midgray"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>