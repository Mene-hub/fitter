<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:contentDescription="@string/user_profile"
                android:id="@+id/userprofileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="@color/black"
                app:srcCompat="@drawable/person_24_40dp" />

            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/txt_userProfile"
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:drawableTint="#000000"
                android:text="@string/user_profile"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_calendar" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/logout"
                android:id="@+id/IV_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="@color/black"
                app:srcCompat="@drawable/ic_bookmarks" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_bookmark"
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:drawableTint="#000000"
                android:text="@string/saved_cards"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_search_profiles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/logout"
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="@color/black"
                app:srcCompat="@drawable/logout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_logout"
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:drawableTint="#000000"
                android:text="@string/logout"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_search_profiles" />
        </LinearLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>