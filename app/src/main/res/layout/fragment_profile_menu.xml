<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    app:cardBackgroundColor="@color/white">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#333333"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp">

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/search" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_search_profiles"
                    style="@style/BottomSheetItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#000000"
                    android:text="Search Profiles"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/fitness_item" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mycards"
                    style="@style/BottomSheetItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableTint="#000000"
                    android:text="My Cards"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_logout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/calendar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_calendar"
                    style="@style/BottomSheetItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableTint="#000000"
                    android:text="Calendar"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_logout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/graph" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_recap"
                    style="@style/BottomSheetItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#000000"
                    android:text="Weekly Recap"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_calendar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/logout" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_logout"
                    style="@style/BottomSheetItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#000000"
                    android:text="Log out"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_search_profiles" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>